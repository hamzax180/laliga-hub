{
    "version": 2,
    "builds": [
        {
            "src": "backend/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/**",
            "use": "@vercel/static"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/backend/server.js"
        },
        {
            "source": "/",
            "destination": "/frontend/home.html"
        },
        {
            "source": "/home",
            "destination": "/frontend/home.html"
        },
        {
            "source": "/news",
            "destination": "/frontend/news.html"
        },
        {
            "source": "/standings",
            "destination": "/frontend/standings.html"
        },
        {
            "source": "/fixtures",
            "destination": "/frontend/fixtures.html"
        },
        {
            "source": "/scorers",
            "destination": "/frontend/scorers.html"
        },
        {
            "source": "/transfers",
            "destination": "/frontend/transfers.html"
        },
        {
            "source": "/(.*)",
            "destination": "/frontend/$1"
        }
    ]
}