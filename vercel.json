{
    "version": 2,
    "builds": [
        {
            "src": "backend/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/server.js"
        },
        {
            "src": "/",
            "dest": "frontend/home.html"
        },
        {
            "src": "/home",
            "dest": "frontend/home.html"
        },
        {
            "src": "/standings",
            "dest": "frontend/standings.html"
        },
        {
            "src": "/fixtures",
            "dest": "frontend/fixtures.html"
        },
        {
            "src": "/scorers",
            "dest": "frontend/scorers.html"
        },
        {
            "src": "/transfers",
            "dest": "frontend/transfers.html"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/$1"
        }
    ]
}